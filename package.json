{
  "name": "comore",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.13.1",
  "scripts": {
    "setup": "corepack enable pnpm",
    "build": "react-router build",
    "preview": "pnpm build && vite preview",
    "deploy": "pnpm build && wrangler deploy",
    "dev": "react-router dev",
    "start": "react-router-serve ./build/server/index.js",
    "stripe:listen": "stripe listen --forward-to localhost:5173/api/payment/webhook",
    "stripe:seed": "tsx seeds/stripe-plans.ts",
    "stripe:seed:single": "tsx seeds/stripe-create-single-price.ts",
    "test": "NODE_ENV=test vitest run",
    "test:watch": "NODE_ENV=test vitest watch",
    "test:coverage": "NODE_ENV=test vitest run --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply --local DB",
    "db:migrate-production": "drizzle-kit migrate",
    "db:studio": "LOCAL_DB_PATH=$(find .wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name '*.sqlite' -print -quit) drizzle-kit studio",
    "db:studio:prod": "drizzle-kit studio",
    "cf-typegen": "wrangler types",
    "typecheck": "react-router typegen && tsc --build",
    "spell-check": "cspell lint --gitignore \"**\"",
    "lint": "oxlint && eslint && knip --tags=-knipignore",
    "fmt": "prettier -w . --experimental-cli",
    "postinstall": "npm run cf-typegen",
    "prepare": "lefthook install"
  },
  "dependencies": {
    "@hookform/resolvers": "5.2.2",
    "@oslojs/crypto": "1.0.1",
    "@oslojs/encoding": "1.1.0",
    "@pilcrowjs/object-parser": "0.0.4",
    "@react-router/node": "7.9.4",
    "@react-router/serve": "7.9.4",
    "@stripe/react-stripe-js": "3.10.0",
    "@stripe/stripe-js": "7.9.0",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "cmdk": "1.1.1",
    "date-fns": "4.1.0",
    "embla-carousel-react": "8.6.0",
    "input-otp": "1.4.2",
    "isbot": "5.1.31",
    "lucide-react": "0.545.0",
    "next-themes": "0.4.6",
    "radix-ui": "latest",
    "react": "19.2.0",
    "react-day-picker": "9.11.1",
    "react-dom": "19.2.0",
    "react-hook-form": "7.65.0",
    "react-resizable-panels": "3.0.6",
    "react-router": "7.9.4",
    "recharts": "2.15.4",
    "sonner": "2.0.7",
    "stripe": "18.5.0",
    "tailwind-merge": "3.3.1",
    "uuidv7": "1.0.2",
    "vaul": "1.1.2",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "1.13.13",
    "@libsql/client": "0.15.15",
    "@react-router/dev": "7.9.4",
    "@secretlint/secretlint-rule-preset-recommend": "10.2.2",
    "@tailwindcss/vite": "4.1.14",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.0",
    "@types/node": "22.18.8",
    "@types/react": "19.2.0",
    "@types/react-dom": "19.2.0",
    "@vitest/coverage-v8": "3.2.4",
    "arctic": "3.7.0",
    "cspell": "9.2.1",
    "dotenv": "17.2.3",
    "drizzle-kit": "0.31.5",
    "drizzle-orm": "0.44.6",
    "eslint": "9.36.0",
    "eslint-plugin-oxlint": "1.19.0",
    "jsdom": "26.1.0",
    "knip": "5.65.0",
    "lefthook": "1.13.6",
    "oxlint": "1.23.0",
    "prettier": "3.6.2",
    "secretlint": "10.2.2",
    "tailwindcss": "4.1.14",
    "tsx": "4.20.6",
    "tw-animate-css": "1.4.0",
    "typescript": "5.9.3",
    "vite": "7.1.10",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4",
    "wrangler": "4.43.0"
  }
}
