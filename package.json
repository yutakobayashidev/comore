{
  "name": "comore",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.13.1",
  "scripts": {
    "setup": "corepack enable pnpm",
    "build": "react-router build",
    "preview": "pnpm build && vite preview",
    "deploy": "pnpm build && wrangler deploy",
    "dev": "react-router dev",
    "start": "react-router-serve ./build/server/index.js",
    "stripe:listen": "stripe listen --forward-to localhost:5173/api/payment/webhook",
    "stripe:seed": "tsx seeds/stripe-plans.ts",
    "stripe:seed:single": "tsx seeds/stripe-create-single-price.ts",
    "test": "NODE_ENV=test vitest run",
    "test:watch": "NODE_ENV=test vitest watch",
    "test:coverage": "NODE_ENV=test vitest run --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply --local DB",
    "db:migrate-production": "drizzle-kit migrate",
    "db:studio": "LOCAL_DB_PATH=$(find .wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name '*.sqlite' -print -quit) drizzle-kit studio",
    "db:studio:prod": "drizzle-kit studio",
    "cf-typegen": "wrangler types",
    "typecheck": "react-router typegen && tsc --build",
    "spell-check": "cspell lint --gitignore \"**\"",
    "lint": "oxlint && eslint && knip --tags=-knipignore",
    "fmt": "prettier -w . --experimental-cli",
    "postinstall": "npm run cf-typegen",
    "prepare": "lefthook install"
  },
  "dependencies": {
    "@hookform/resolvers": "5.1.1",
    "@oslojs/crypto": "1.0.1",
    "@oslojs/encoding": "1.1.0",
    "@pilcrowjs/object-parser": "0.0.4",
    "@react-router/node": "7.7.0",
    "@react-router/serve": "7.7.0",
    "@stripe/react-stripe-js": "3.7.0",
    "@stripe/stripe-js": "7.5.0",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "cmdk": "1.1.1",
    "date-fns": "4.1.0",
    "embla-carousel-react": "8.6.0",
    "input-otp": "1.4.2",
    "isbot": "5.1.28",
    "lucide-react": "0.525.0",
    "next-themes": "0.4.6",
    "radix-ui": "latest",
    "react": "19.1.0",
    "react-day-picker": "9.8.0",
    "react-dom": "19.1.0",
    "react-hook-form": "7.60.0",
    "react-resizable-panels": "3.0.3",
    "react-router": "7.7.0",
    "recharts": "2.15.4",
    "sonner": "2.0.6",
    "stripe": "18.3.0",
    "tailwind-merge": "3.3.1",
    "uuidv7": "1.0.2",
    "vaul": "1.1.2",
    "zod": "4.0.5"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "1.9.6",
    "@libsql/client": "0.15.10",
    "@react-router/dev": "7.7.0",
    "@secretlint/secretlint-rule-preset-recommend": "10.2.1",
    "@tailwindcss/vite": "4.1.11",
    "@testing-library/dom": "10.4.0",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.3.0",
    "@types/node": "22.16.4",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@vitest/coverage-v8": "3.2.4",
    "arctic": "3.7.0",
    "cspell": "9.1.5",
    "dotenv": "17.2.0",
    "drizzle-kit": "0.31.4",
    "drizzle-orm": "0.44.3",
    "eslint": "9.31.0",
    "eslint-plugin-oxlint": "1.7.0",
    "jsdom": "26.1.0",
    "knip": "5.61.3",
    "lefthook": "1.12.2",
    "oxlint": "1.7.0",
    "prettier": "3.6.2",
    "secretlint": "10.2.1",
    "tailwindcss": "4.1.11",
    "tsx": "4.20.3",
    "tw-animate-css": "1.3.5",
    "typescript": "5.8.3",
    "vite": "7.0.5",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4",
    "wrangler": "4.25.0"
  }
}
